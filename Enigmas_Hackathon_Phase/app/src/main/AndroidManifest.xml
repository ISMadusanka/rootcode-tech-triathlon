            android:exported="false" />
        <activity
            android:name=".ComparePackageActivity"
            android:exported="false" />

        <activity
            android:name=".PackageDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".StationListViewActivity"
            android:exported="false" />
        <activity
            android:name=".PublicTourActivity"
            android:exported="false" />
        <activity
            android:name=".SecondHomeActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>